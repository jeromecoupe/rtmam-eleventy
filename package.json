{
  "name": "test-eleventy",
  "version": "1.0.0",
  "description": "Testing Eleventy at IAD",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf \"./dist\"",
    "server": "browser-sync start --server \"./dist\" --files \"./dist\" --no-open",
    "eleventy": "npx @11ty/eleventy --quiet",
    "styles:dev": "sass --embed-source-map --source-map-urls=\"absolute\" \"./src/assets/scss/main.scss\" \"./dist/assets/css/main.css\"",
    "styles:prod": "sass --style=\"compressed\" --no-source-map \"./src/assets/scss/main.scss\" \"./dist/assets/css/main.css\"",
    "watch:styles": "onchange \"./src/assets/scss/**/*\" -- npm run styles:dev",
    "watch:eleventy": "npx @11ty/eleventy --watch --quiet",
    "dev": "npm-run-all -p server watch:*",
    "build": "npm-run-all clean -p eleventy styles:prod"
  },
  "keywords": [
    "eleventy",
    "11ty",
    "node"
  ],
  "author": "Jérôme Coupé",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "axios": "^1.2.1",
    "browser-sync": "^2.27.10",
    "luxon": "^3.1.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "rimraf": "^3.0.2",
    "sass": "^1.56.1"
  }
}
